---
import Layout from '../../layouts/Layout.astro';
import { getPostBySlug, getAllPosts } from '../../lib/notion';
import { renderNotionBlocks } from '../../lib/renderNotion';

export async function getStaticPaths() {
  const posts = await getAllPosts();
  
  return posts.map(post => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = await getPostBySlug(slug);

if (!post) {
  return Astro.redirect('/404');
}

// Render blocks to HTML
const htmlContent = renderNotionBlocks(post.content);

---


<Layout title={post.title}>
  <article class="post">
    <header>
      <h1>{post.title}</h1>
      <div class="post-meta">
        <time datetime={post.publishedDate}>
          {new Date(post.publishedDate).toLocaleDateString()}
        </time>
        <div class="tags">
          {post.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </header>
    
    {post.featuredImage && (
      <img 
        src={post.featuredImage} 
        alt={`Featured image for ${post.title}`}
        class="featured-image"
      />
    )}
    
    <div class="content" set:html={htmlContent} />
    
    <footer>
      <a href="/">&larr; Back to all posts</a>
    </footer>
  </article>
</Layout>